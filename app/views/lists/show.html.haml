.wrapper
	%h1= "#{@user.first_name}'s #{@list.category} Wishlist"
	.itemscontainer
		-@products.each do |product|
			.image
				%img{:src => product.hero_img_url}
			.info
				%span.name= product.name
				%span.brand= product.brand
				%span.price= "$#{product.price}"
			.clr
	.clr
	%button#donate= "Donate"